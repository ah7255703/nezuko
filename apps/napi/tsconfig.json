{
  "extends": "@nezuko/typescript-config/base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "module": "ES2015",
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": [
      "ES2015"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@db/*": [
        "./src/db/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "include": [
    "src",
    "."
  ]
}