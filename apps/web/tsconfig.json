{
  "extends": "@nezuko/typescript-config/nextjs.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.*js",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}